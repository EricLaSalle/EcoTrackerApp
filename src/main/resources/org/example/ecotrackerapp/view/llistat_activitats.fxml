<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ecotrackerapp.controllers.LlistaActivitatsController"
      spacing="10" style="-fx-padding: 10;">

    <Label text="Llistat d'Activitats Sostenibles" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tablaActividades">
        <columns>
            <TableColumn fx:id="colNombre" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colDescripcion" text="Descripció" prefWidth="250"/>
            <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="120"/>
            <TableColumn fx:id="colFecha" text="Data" prefWidth="100"/>
            <TableColumn fx:id="colCo2" text="CO₂ Estalviat (kg)" prefWidth="120"/>
        </columns>
    </TableView>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Label text="Total CO₂ estalviat:" style="-fx-font-weight: bold;"/>
        <Label fx:id="totalCo2" style="-fx-text-fill: #2e8b57; -fx-font-weight: bold;"/>
    </HBox>
</VBox>