<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ecotrackerapp.controllers.LlistaActivitatsController"
      spacing="10" style="-fx-padding: 10;">

    <Label text="Llistat d'Activitats Sostenibles" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <TableView fx:id="tablaActividades" style="-fx-table-cell-border-color: transparent;">
        <columns>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
            <TableColumn fx:id="colData" text="Data" prefWidth="100"/>
            <TableColumn fx:id="colCategoria" text="Categoria" prefWidth="120"/>
            <TableColumn fx:id="colDescripcio" text="Descripció" prefWidth="250"/>
            <TableColumn fx:id="colQuantitat" text="Quantitat" style="-fx-alignment: CENTER-RIGHT;" prefWidth="80"/>
            <TableColumn fx:id="colCo2" text="CO₂ Estalviat (kg)" style="-fx-alignment: CENTER-RIGHT;" prefWidth="120"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox spacing="10" style="-fx-padding: 10 0 0 0;">
        <Label text="Total CO₂ estalviat:" style="-fx-font-weight: bold;"/>
        <Label fx:id="totalCo2" style="-fx-text-fill: #2e8b57; -fx-font-weight: bold;"/>
    </HBox>
</VBox>