<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane stylesheets="@StyleMenuDadesManager.css"
            prefHeight="600.0" prefWidth="800.0"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ecotrackerapp.controllers.MenuDadesManagerController">

   <!-- HEADER -->
   <top>
      <Label text="Gestor d'Activitats Sostenibles"
             styleClass="header"
             maxWidth="Infinity"
             BorderPane.alignment="CENTER"/>
   </top>

   <!-- FOOTER -->
   <bottom>
      <Label text="Â© 2025 EcotrackerApp"
             styleClass="footer"
             maxWidth="Infinity"
             BorderPane.alignment="CENTER"/>
   </bottom>

   <!-- LATERALES DECORATIVOS -->
   <left>
      <VBox styleClass="sidebar-left"
            maxHeight="Infinity"
            VBox.vgrow="ALWAYS"/>
   </left>

   <right>
      <VBox styleClass="sidebar-right"
            maxHeight="Infinity"
            VBox.vgrow="ALWAYS"/>
   </right>

   <!-- CONTENIDO PRINCIPAL (Botones) -->
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <Button text="Afegir Activitat" onAction="#onClickAfegirActivitat" mnemonicParsing="false"/>
         <Button text="Afegir dades des d'un arxiu" onAction="#onClickAfegirDesdeArxiu" mnemonicParsing="false"/>
         <Button text="Eliminar o Modificar Activitat" onAction="#onClickEliminarModificarActivitat" mnemonicParsing="false"/>
      </VBox>
   </center>

</BorderPane>
